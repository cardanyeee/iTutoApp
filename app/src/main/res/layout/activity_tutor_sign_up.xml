<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="Set your time"
        android:textColor="@color/colorPrimary"
        android:textFontWeight="900"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="Pick a time of day, when you would be available to provide your tutoring services."
        android:textColor="@color/colorHint"
        android:textFontWeight="700"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMinTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:fontFamily="@font/roboto_black"
            android:onClick="showTimePicker"
            android:text="9:00"
            android:textFontWeight="900"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtMinTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/roboto_light"
            android:onClick="showTimePicker"
            android:text="AM"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_baseline_east_24" />

        <TextView
            android:id="@+id/txtMaxTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:fontFamily="@font/roboto_black"
            android:onClick="showTimePicker"
            android:text="6:00"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtMaxTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="showTimePicker"
            android:text="PM"
            android:textAllCaps="true"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/ckbSunday"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/checkbox_custom"
            android:button="@color/colorTransparent"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:onClick="onDayCheckboxClicked"
            android:text="S"
            android:textColor="@drawable/checkbox_text" />

        <CheckBox
            android:id="@+id/ckbMonday"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/checkbox_custom"
            android:button="@color/colorTransparent"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:onClick="onDayCheckboxClicked"
            android:text="M"
            android:textColor="@drawable/checkbox_text" />

        <CheckBox
            android:id="@+id/ckbTuesday"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/checkbox_custom"
            android:button="@color/colorTransparent"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:onClick="onDayCheckboxClicked"
            android:text="T"
            android:textColor="@drawable/checkbox_text" />

        <CheckBox
            android:id="@+id/ckbWednesday"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/checkbox_custom"
            android:button="@color/colorTransparent"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:onClick="onDayCheckboxClicked"
            android:text="W"
            android:textColor="@drawable/checkbox_text" />

        <CheckBox
            android:id="@+id/ckbThursday"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/checkbox_custom"
            android:button="@color/colorTransparent"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:onClick="onDayCheckboxClicked"
            android:text="T"
            android:textColor="@drawable/checkbox_text" />

        <CheckBox
            android:id="@+id/ckbFriday"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/checkbox_custom"
            android:button="@color/colorTransparent"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:onClick="onDayCheckboxClicked"
            android:text="F"
            android:textColor="@drawable/checkbox_text" />

        <CheckBox
            android:id="@+id/ckbSaturday"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/checkbox_custom"
            android:button="@color/colorTransparent"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:onClick="onDayCheckboxClicked"
            android:text="S"
            android:textColor="@drawable/checkbox_text" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSignUpTutor"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/btn_solid"
        android:elevation="4dp"
        android:fontFamily="@font/roboto"
        android:text="@string/btnTextSignUp"
        android:textColor="@color/colorWhite"
        android:theme="@style/Button.Primary" />

</LinearLayout>