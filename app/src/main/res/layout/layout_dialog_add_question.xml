<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:includeFontPadding="false"
                    android:text="Add your questions here."
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:theme="@style/Button.Primary"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_input"
                        android:hint="Type quiz question here..."
                        android:inputType="text"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="5dp"
                        android:textSize="13sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:text="A" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtAnswerA"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="9.5"
                                android:background="@drawable/custom_input"
                                android:hint="Choice A"
                                android:inputType="text"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="5dp"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:text="B" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtAnswerB"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="9.5"
                                android:background="@drawable/custom_input"
                                android:hint="Choice B"
                                android:inputType="text"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="5dp"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:text="C" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtAnswerC"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="9.5"
                                android:background="@drawable/custom_input"
                                android:hint="Choice C"
                                android:inputType="text"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="5dp"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:text="D" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtAnswerD"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="9.5"
                                android:background="@drawable/custom_input"
                                android:hint="Choice D"
                                android:inputType="text"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="5dp"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:weightSum="8">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rdbA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp" />


                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rdbB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rdbC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp" />


                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rdbD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp" />

                    </RadioGroup>

                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAdd"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/btn_solid"
                    android:elevation="4dp"
                    android:fontFamily="@font/roboto"
                    android:text="Add"
                    android:theme="@style/Button.Primary"
                    app:icon="@drawable/ic_baseline_add_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/colorSecondary" />

            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>