<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ITutoApp.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorBackground</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@android:anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="CustomToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/colorPrimary</item>
        <item name="stFont">@font/roboto_regular</item>
        <item name="stTextSize">12sp</item>
        <item name="stColorBackground">@color/colorBackground</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">0dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">40dp</item>
    </style>
</resources>